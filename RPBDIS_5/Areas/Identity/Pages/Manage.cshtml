@model IEnumerable<RPBDIS_5.ViewModels.Users.UserViewModel>

<h2>User Management</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Registration Date</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.RegistrationDate.ToShortDateString()</td>
                <td>@user.RoleName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
