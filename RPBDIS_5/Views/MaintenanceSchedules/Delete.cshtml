@model RPBDIS_5.Models.MaintenanceSchedule

@{
    ViewData["Title"] = "Delete Maintenance Schedule";
    Layout = "_Layout";
}

<h2>Delete Maintenance Schedule</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Maintenance Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Equipment</dt>
        <dd class="col-sm-10">@Model.Equipment?.Name</dd>

        <dt class="col-sm-2">Maintenance Type</dt>
        <dd class="col-sm-10">@Model.MaintenanceType?.Description</dd>

        <dt class="col-sm-2">Scheduled Date</dt>
        <dd class="col-sm-10">@Model.ScheduledDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Responsible Employee</dt>
        <dd class="col-sm-10">@Model.ResponsibleEmployee?.FullName</dd>

        <dt class="col-sm-2">Estimated Cost</dt>
        <dd class="col-sm-10">@Model.EstimatedCost</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ScheduleId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
