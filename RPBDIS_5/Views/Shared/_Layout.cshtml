<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RPBDIS_5</title>
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Подключаем CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <!-- Верхнее меню навигации -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">RPBDIS_5</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Equipments")">Equipments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "MaintenanceSchedules")">MaintenanceSchedules</a>
                    </li>
                    @if (User.IsInRole("admin")) // Проверка на роль admin для отображения действий
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Employees")">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "CompletedWorks")">CompletedWorks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "MaintenanceTypes")">MaintenanceTypes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Users")">Список пользователей</a>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Основное содержимое страницы -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Подвал -->
    <footer class="footer mt-auto py-3 bg-dark text-light">
        <div class="container">
            <span class="text-muted">&copy; 2024 RPBDIS_5. All rights reserved.</span>
        </div>
    </footer>

    <!-- Подключаем JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Проверка наличия секции Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
