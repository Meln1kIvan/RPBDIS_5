@model RPBDIS_5.Models.Equipment

@{
    ViewData["Title"] = "Delete Equipment";
    Layout = "_Layout";
}

<h2>Удалить оборудование</h2>

<h3>Вы уверены что хотите удалить оборудование?</h3>

<div>
    <h4>Оборудование</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Инвентарный номер</dt>
        <dd class="col-sm-10">@Model.InventoryNumber</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Дата приобретения</dt>
        <dd class="col-sm-10">@Model.StartDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Место нахождения</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="EquipmentId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
    </div>
</form>
