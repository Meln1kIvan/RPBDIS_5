@model RPBDIS_5.Models.Equipment

@{
    ViewData["Title"] = "Delete Equipment";
    Layout = "_Layout";
}

<h2>Delete Equipment</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Equipment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Inventory Number</dt>
        <dd class="col-sm-10">@Model.InventoryNumber</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="EquipmentId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
