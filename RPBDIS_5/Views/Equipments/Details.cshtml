@model RPBDIS_5.Models.Equipment

<h2>Equipment Details</h2>

<table class="table">
    <tr>
        <th>Inventory Number</th>
        <td>@Model.InventoryNumber</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Start Date</th>
        <td>@Model.StartDate?.ToString("d")</td>
    </tr>
    <tr>
        <th>Location</th>
        <td>@Model.Location</td>
    </tr>
</table>

<p>
    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.EquipmentId })">Edit</a> |
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
</p>
